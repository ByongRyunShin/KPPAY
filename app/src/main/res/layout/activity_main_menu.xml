<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity = "bottom|center"
    android:background="@drawable/customer_main_screen"
    tools:context="com.coders.crud.kppay.MainMenuActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/qrcode_button_customer_main"
        android:onClick="onScanBtClicked"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="515dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/button"
        android:background="@drawable/wallet_button_customer_main"
        android:onClick="onWalletBtClicked"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="515dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/button2"
        android:background="@drawable/search_button_customer_main"
        android:onClick="onSearchBtClicked"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="515dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/button3"
        android:background="@drawable/cart_button_customer_main"
        android:onClick="onCartBtClicked"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="515dp" />
</RelativeLayout>
